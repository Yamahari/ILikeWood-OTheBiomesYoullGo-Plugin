{
  "multipart": [
    {
      "when": {
        "axis": "y"
      },
      "apply": {
        "model": "ilikewood:block/post/nightshade"
      }
    },
    {
      "when": {
        "axis": "x"
      },
      "apply": {
        "model": "ilikewood:block/post/nightshade",
        "x": 90,
        "y": 90
      }
    },
    {
      "when": {
        "axis": "z"
      },
      "apply": {
        "model": "ilikewood:block/post/nightshade",
        "x": 90
      }
    },
    {
      "when": {
        "down": "true"
      },
      "apply": {
        "model": "ilikewood:block/post/side/nightshade",
        "x": 90
      }
    },
    {
      "when": {
        "up": "true"
      },
      "apply": {
        "model": "ilikewood:block/post/side/nightshade",
        "x": 270
      }
    },
    {
      "when": {
        "north": "true"
      },
      "apply": {
        "model": "ilikewood:block/post/side/nightshade"
      }
    },
    {
      "when": {
        "south": "true"
      },
      "apply": {
        "model": "ilikewood:block/post/side/nightshade",
        "y": 180
      }
    },
    {
      "when": {
        "west": "true"
      },
      "apply": {
        "model": "ilikewood:block/post/side/nightshade",
        "y": 270
      }
    },
    {
      "when": {
        "east": "true"
      },
      "apply": {
        "model": "ilikewood:block/post/side/nightshade",
        "y": 90
      }
    }
  ]
}